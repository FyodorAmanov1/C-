int main() {
    float pi, sum = 0;
    for (int i = 1; i <= 13; i += 2){
        if (i%4 == 1) {sum += 1/i;} else {sum -= 1/i;}
        
    }
    pi = sum;
    cout << pi;
    return 0;
    
}

