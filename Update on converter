#include <iostream>
#include <cmath>
#include <string>
using namespace std;

int main()
{
    int n, c, t, l, kept;
    double h, o;
    bool r;
    string s, rev, hexa, oct, octN, hexaN;
    cout << "Enter your number: \n";
