    kept = n;
    c = floor(log2(n));
    for (int i = 0; i <= c; i++){
        r = n%2;
        if (r == 1) {
            s += "1";
        }
        else {s += "0";}
        n = floor(n/2);
    }
    rev = string(s.rbegin(), s.rend());
    
    n = kept;

    h = ceil(log2(n)/4);
    cout << h;
    for (int i = 0; i < h; i++){
        l = n%16;
        if (l == 10) {
            hexaN += "A";
        }
        if (l == 11) {
            hexaN += "B";
        }
        if (l == 12) {
            hexaN += "C";
        }
        if (l == 13) {
            hexaN += "D";
        }
        if (l == 14) {
            hexaN += "E";
        }
        if (l == 15) {
            hexaN += "F";
        }
        else { hexaN += to_string(l);}
        n = floor(n/16);
    }
    hexa = string(hexaN.rbegin(), hexaN.rend());
    
    n = kept;

    o = ceil(log2(n)/3);
    for (int i = 0; i < o; i++){
        l = n%8;
        octN += to_string(l);
        n = floor(n/8);
    }
    oct = string(octN.rbegin(), octN.rend());



    /* Long code for machine, yet good and logical for humans 

    hexa = s + (h - length(rev))*"0";
    hexa = string(hexa.rbegin(), hexa.rend())

    octel = s + (o - length(rev))*"0";
    octel = string(octel.rbegin(), octel.rend())

    for (int i = 0; i < length(octel); i++) {
